{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "out",
    "baseUrl": ".",
    "paths": {
      "": ["node_modules/"]
    },
    "strict": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/*/"]
}
